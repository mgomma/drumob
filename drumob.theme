/**
 * Implements hook_preprocess_page() for page.html.twig.
 */
function drumob_preprocess_page(array &$variables) {
  //get all theme variables in on array.
  $drumob_variables = drumob_variables($variables);
  $variables['logo'] = $drumob_variables['logo'];
  // Adds the set in the theme variable too√∂bar buttons
  // to the page render variables
  // Header left and right:
  $variables['header_buttons_left'] = $drumob_variables['toolbar_settings']['header_links'];
  $variables['region_wells'] = $drumob_variables['region_wells'];
  // footer 1-5:
  echo '<pre>'; print_r($variables['base_path']); exit;
  $variables['footer_buttons'] = [];
  for($i = 1; $i <= 5; $i++){
    
    $button_attr_arr = [];
    foreach(['icon', 'title', 'href'] as $attr){
      $link_key = 'link_'.$attr.'_'.$i;

      if($drumob_variables[$link_key]){
        if($attr == 'href' && !strstr($button_attr_arr[$attr], 'http://')){
          
        }
        $button_attr_arr[$attr] = $drumob_variables[$link_key];
      }
    }
    if(count($button_attr_arr) == 3){
      $variables['footer_buttons'][$i] = $button_attr_arr;
    }
  }
  $variables['show_node_heading'] = $drumob_variables['theme_settings']['show_node_heading'];
  
  
  // Add the loading animation to the css inline.
  // So that it can be passed from the settings.
  if ($drumob_variables['theme_settings']['show_loading_animation']) {
    if ($selected_animation_icon = $drumob_variables['loading_animation_settings']['animation_icon']) {
      $variables['animation_icon_css'] = 'body.loading{background: url("' . drupal_get_path('theme', 'drumob') . '/assets/img/'.$selected_animation_icon.'.gif'.'") no-repeat 50% 20%}';
    }
    else {
      $variables['animation_icon_css'] = 'body.loading{background: url("' . drupal_get_path('theme', 'drumob') . '/assets/img/loading1.gif'.'") no-repeat 50% 20%}';
    }
  }

  // Add the navmenu font size to the css inline.
  // So that it can be passed from the settings.
  if ($nmfs_placeholder = $drumob_variables['navmenu_settings']['navmenu_font_size']) {
    if (!empty($nmfs_placeholder)) {
      $variables['navmenu_font_size_css'] = '.region-navigation a{font-size: ' . $nmfs_placeholder . '}';
    }
  }

  if ($drumob_variables['toolbar_settings']['show_footer_on_mobile_only']) {
    $variables['footer_mobile_visibility'] = 'visible-xs visible-sm';
  }
}

